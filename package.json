{
  "private": true,
  "workspaces": [
    "packages/demo",
    "packages/react-left-nav/lib"
  ],
  "scripts": {
    "start": "lerna run --parallel start",
    "precommit": "lint-staged",
    "lint": "node node_modules/eslint/bin/eslint.js --max-warnings=0 packages/demo/src && node node_modules/eslint/bin/eslint.js --max-warnings=0 packages/react-left-nav/src"
  },
  "devDependencies": {
    "eslint-config-react-app": "3.0.6",
    "husky": "1.2.1",
    "lerna": "3.8.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/eslint-config-react-app/index.js",
    "settings": {
      "react": {
        "version": "16.7.0"
      }
    },
    "rules": {
      "no-console": 1,
      "react/default-props-match-prop-types": 1,
      "react/prop-types": 1,
      "react/no-unused-prop-types": 1,
      "react/sort-prop-types": [
        true,
        {
          "ignoreCase": true,
          "sortShapeProp": true
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "linters": {
      "packages/**/{src,lib}/*.{css,html,js,json,md}": [
        "prettier --write",
        "npm run lint",
        "git add"
      ],
      "yarn.lock": [
        "git rm --cached"
      ]
    }
  }
}
